<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@color/Black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:background="@color/Red"
        android:padding="8dp"
        android:id="@+id/txtRed"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="159dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:background="@color/Orange"
        android:padding="8dp"
        android:id="@+id/txtOrange"
        android:layout_below="@+id/txtRed"
        android:layout_toRightOf="@+id/txtRed"
        android:layout_toEndOf="@+id/txtRed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:background="@color/Yellow"
        android:padding="8dp"
        android:id="@+id/txtYellow"
        android:layout_below="@+id/txtOrange"
        android:layout_toRightOf="@+id/txtOrange"
        android:layout_toEndOf="@+id/txtOrange" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:background="@color/Green"
        android:padding="8dp"
        android:id="@+id/txtGreen"
        android:layout_below="@+id/txtYellow"
        android:layout_toRightOf="@+id/txtYellow"
        android:layout_toEndOf="@+id/txtYellow" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:background="@color/Blue"
        android:padding="8dp"
        android:id="@+id/txtBlue"
        android:layout_below="@+id/txtGreen"
        android:layout_toLeftOf="@+id/txtGreen"
        android:layout_toStartOf="@+id/txtGreen" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indigo"
        android:background="@color/Indigo"
        android:padding="8dp"
        android:id="@+id/txtIndigo"
        android:layout_below="@+id/txtBlue"
        android:layout_toLeftOf="@+id/txtBlue"
        android:layout_toStartOf="@+id/txtBlue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Violet"
        android:background="@color/Violet"
        android:padding="8dp"
        android:id="@+id/txtViolet"
        android:layout_below="@+id/txtIndigo"
        android:layout_toLeftOf="@+id/txtIndigo"
        android:layout_toStartOf="@+id/txtIndigo" />
</RelativeLayout>